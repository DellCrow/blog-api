<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-dark table-bordered ">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td type ="button" class="btn btn-danger float-right" ><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }%></td>
        <td type ="button" class="btn btn-secondary float-right" ><%= link_to 'Edit', edit_user_path(user) %></td>
        <td type ="button" class="btn btn-primary  float-right" ><%= link_to 'Show', user  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

